<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/focus_search_box_stroke" />
            <solid android:color="@color/checked_radio_button_background" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/not_focus_search_box_stroke" />
            <solid android:color="@color/not_checked_radio_button_background" />
        </shape>
    </item>
</selector>